pipeline {
    agent none
    stages {
        stage('Checkout') {
            agent any
            steps {
                git branch: 'main',
                url : 'https://github.com/jiwonseok97/source-maven-java-spring-hello-webapp.git'
            }
        }
        stage('Build'){
            agent{
                docker {image 'maven:3-openjdk-17'}
            }
            steps{
                sh 'docker image build -t tomcat:hello .'
            }
        }
        stage('Image Tag'){
            agent any
            steps{
              sh 'docker image tag tomcat:hello jiwonseok97   /tomcat:$BUILDNUMBER'
              sh 'docker image tag tomcat:hello jiwonseok97   /tomcat:latest'
            }
        }
        stage('Image Push'){
            agent any
            steps{
                withDockerRegistry(credentialsId: 'docker-hub-token ', url: 'https://index.docker.io/v1/'){
                  sh 'docker image push tomcat:hello jiwonseok97   /tomcat:$BUILDNUMBER'
                  sh 'docker image push tomcat:hello jiwonseok97   /tomcat:latest'
                }
            }
        }
        stage('Runnig Container'){
            agent any
            steps{
              sh 'docker image tag tomcat:hello jiwonseok97   /tomcat:latest'
              sh 'docker -H tcp://192.168.56.103:2375 run -d --name webserver -p 80:8080 jiwoseok97/tomcat:latest'
            }
        }
    }
}

